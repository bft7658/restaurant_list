<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search" class="mb-3">
        {{!-- Search bar --}}
        <div class="input-group mb-2 mb-sm-0 mr-sm-4">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            aria-describedby="search-button" value="{{ keyword }}" />
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>

      {{!-- sort bar --}}
      <div class="dropdown input-group d-flex justify-content-between">
        <div class="dropdown">
          <a class="btn btn-secondary dropdown-toggle" type="button" id="sort" data-bs-toggle="dropdown"
            aria-expanded="false">
            排列順序
          </a>
          <ul class="dropdown-menu" aria-labelledby="sort">
            <li><a class="dropdown-item" href="{{#if keyword}}?keyword={{keyword}}&{{else}}?{{/if}}sort=name_en">名稱 A →
                Z</a></li>
            <li><a class="dropdown-item" href="{{#if keyword}}?keyword={{keyword}}&{{else}}?{{/if}}sort=-name_en">名稱 Z →
                A</a></li>
            <li><a class="dropdown-item" href="{{#if keyword}}?keyword={{keyword}}&{{else}}?{{/if}}sort=-rating">評分 高 →
                低</a></li>
            <li><a class="dropdown-item" href="{{#if keyword}}?keyword={{keyword}}&{{else}}?{{/if}}sort=rating">評分 低 →
                高</a></li>
          </ul>
        </div>
        <a href="/restaurants/new" style="margin-left: 0.5em;">
          <button type="button" class="btn btn-primary"><i class="fas fa-plus mr-2"></i>新增餐廳</button>
        </a>
      </div>
    </div>
  </div>
</div>

{{#if restaurants}}
<!-- restaurant list -->
<div class="container mt-5 mb-3">
  <div class="col-md col-12 mx-auto">
    <div class="row row-cols-3">
      {{#each restaurants}}
      {{!-- 不要寫成 this.id，因為在 Mongoose 裡是使用 _id 來表示每筆資料的唯一識別碼。--}}
      <div class="col-sm-4">
        <a href="/restaurants/{{ this._id }}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{ this.image }}" alt="{{ this.name }}" />
            <div class="card-body p-3">
              <h6 class="card-title mb-1 text-secondary">{{ this.name }}</h6>
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i>
                {{ this.category }}
              </div>
              <span class="badge badge-pill badge-danger font-weight-normal">
                {{ this.rating }}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
        </a>
        <div class="card-footer d-flex justify-content-around">
          <form action="/restaurants/{{ this._id }}/edit" style="display: inline;">
            <button type="submit" class="btn p-0" style="color: rgb(137, 137, 137)"><i
                class="fas fa-pencil-alt"></i></button>
          </form>
          <form action="/restaurants/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
            <button type="submit" class="btn p-0" style="color: rgb(255, 139, 139)"><i
                class="fas fa-trash-alt"></i></button>
          </form>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>

{{else}}
<!-- cannot find the restaurant through keyword -->
<div class="container">
  <div class="d-flex flex-column align-items-center mt-3 p-2 mx-auto bg-light">
    <h3 class="p-1">請嘗試輸入喜歡的餐廳</h3>
    {{!-- <p class="p-1">請嘗試輸入其他關鍵字</p>
    <a href="/" class="btn btn-outline-secondary mr-2">
      <i class="fas fa-arrow-circle-left mr-2"></i>Back
    </a> --}}
  </div>
</div>
{{/if}}