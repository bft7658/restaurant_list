<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳名字 or 分類"
            aria-label="Restaurant Name..." aria-describedby="search-button" value="{{ keyword }}">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            <a href="/restaurants/new" style="margin-left: 0.5em;">
              <button type="button" class="btn btn-major"><i class="fas fa-plus"></i></button>
            </a>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5 mb-3">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        {{!-- 不要寫成 this.id，因為在 Mongoose 裡是使用 _id 來表示每筆資料的唯一識別碼。--}}
        <a href="/restaurants/{{ this._id }}" class="text-secondary">
          <div class="card mb-1">
            <img class="card-img-top" src="{{ this.image }}" alt="{{ this.name }}" />
            <div class="card-body p-3">
              <h6 class="card-title mb-1 text-secondary">{{ this.name }}</h6>
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i>
                {{ this.category }}
              </div>
              <span class="badge badge-pill badge-danger font-weight-normal">
                {{ this.rating }}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
        </a>

        <div class="card-footer d-flex justify-content-around">
          <form action="/restaurants/{{ this._id }}/edit" style="display: inline;">
            <button type="submit" class="btn p-0" style="color: rgb(137, 137, 137)"><i
                class="fas fa-pencil-alt"></i></button>
          </form>
          <form action="/restaurants/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
            <button type="submit" class="btn p-0" style="color: rgb(255, 139, 139)"><i
                class="fas fa-trash-alt"></i></button>
          </form>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>
</div>